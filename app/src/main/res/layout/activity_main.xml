<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/toolbarRl"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/nuniti_bold"
                    android:text="Hello,"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="26dp"
                    android:layout_toEndOf="@id/hello"
                    android:fontFamily="@font/nuniti_bold"
                    android:textStyle="bold"
                    android:text="Integrate kar sale!!!"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/nameTv"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/hello"
                    android:fontFamily="@font/nuniti_bold"
                    android:text="Have a great Day"
                    android:textColor="@color/gray01"
                    android:textSize="12dp" />

                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                    android:id="@+id/profileIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="26dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_black"
                    android:tint="@color/gray01"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tableRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarRl">

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="10dp">

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Budget"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Today"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Week"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Month"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Savings"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/budgetTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Rs.100"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/todayTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Rs.20"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/weekTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Rs.50"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/monthTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Rs.100"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/savingsTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Rs.0"
                            android:textStyle="bold"
                            android:fontFamily="@font/nuniti_bold"
                            android:background="@drawable/borders"
                            android:padding="5dp"
                            android:textSize="12sp"/>

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tableRl"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/IvLl"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/budgetCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/budgetIv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_rect_05"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            android:padding="36dp"
                            android:src="@drawable/budget"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/budgetIv"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nuniti_bold"
                            android:text="My Budget"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/todayCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/todayIv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_rect_05"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            android:padding="36dp"
                            android:src="@drawable/week"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/todayIv"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nuniti_bold"
                            android:text="Today's"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/weekCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/weekIv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_rect_05"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            android:padding="36dp"
                            android:src="@drawable/week" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/weekIv"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nuniti_bold"
                            android:text="Week"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/IvLl2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:layout_below="@id/IvLl"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/monthCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="10dp">

                        <ImageView
                            android:id="@+id/monthIv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_rect_05"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            android:padding="36dp"
                            android:src="@drawable/ic_month_black"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/monthIv"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nuniti_bold"
                            android:text="Month"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15dp"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/analyticsCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/analyticIv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_rect_05"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            android:padding="36dp"
                            android:src="@drawable/ic_analytics"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/classroomTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/analyticIv"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nuniti_bold"
                            android:text="My Analytic"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/historyCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/timeTableIv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_rect_05"
                            android:backgroundTint="@color/white"
                            android:elevation="5dp"
                            android:padding="36dp"
                            android:src="@drawable/ic_history" />

                        <TextView
                            android:id="@+id/timeTableTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/timeTableIv"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nuniti_bold"
                            android:text="My History"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_bg"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:elevation="26dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>