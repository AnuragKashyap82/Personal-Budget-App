<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_rect_02"
            android:backgroundTint="#FBEAEB"
            android:fontFamily="@font/nuniti_bold"
            android:gravity="center"
            android:padding="12sp"
            android:src="@drawable/ic_home"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imageView"
            android:drawablePadding="22dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/nuniti_bold"
            android:maxLines="1"
            android:text="Item Name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageView"
            android:drawablePadding="22dp"
            android:drawableTint="@color/gray01"
            android:fontFamily="@font/nuniti_bold"
            android:maxLines="1"
            android:text="Budget"
            android:textSize="16sp"
            ndroid:layout_toEndOf="@id/imageView" />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/amountTv"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageView"
            android:drawablePadding="22dp"
            android:drawableTint="@color/gray01"
            android:fontFamily="@font/nuniti_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Note"
            android:textSize="16sp"
            android:visibility="gone"
            ndroid:layout_toEndOf="@id/imageView" />


        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/note"
            android:layout_toEndOf="@id/imageView"
            android:fontFamily="@font/nuniti_bold"
            android:text="date"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
